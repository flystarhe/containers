ARG PYTHON_VERSION="3.9"

FROM nvidia/cuda:11.6.2-cudnn8-devel-ubuntu20.04

ENV OMP_NUM_THREADS=8
ENV PATH=/opt/conda/bin:$PATH

RUN ln -fs /usr/share/zoneinfo/Asia/Shanghai /etc/localtime && \
    apt-get update && apt-get install -y --no-install-recommends \
        build-essential \
        ca-certificates \
        openssh-server \
        libjpeg-dev \
        libpng-dev \
        curl \
        wget \
        git \
        vim \
        tar \
        zip \
        unzip \
        htop \
        tree \
        tmux \
        ffmpeg \
        tzdata && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

ARG PYTHON_VERSION
RUN wget -q -O ~/miniconda.sh https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh && \
    /bin/bash ~/miniconda.sh -b -p /opt/conda && \
    rm ~/miniconda.sh && \
    conda install -y python=${PYTHON_VERSION} conda-build && \
    pip install torch==1.13.1+cu116 torchvision==0.14.1+cu116 --extra-index-url https://download.pytorch.org/whl/cu116 && \
    pip install notebook ipywidgets tornado opencv-python Pillow scikit-image scikit-learn onnx prettytable pycocotools hello2 fiftyone==0.19.1 && \
    chmod -R ugo+rw /opt/conda/

WORKDIR /opt/src

RUN mkdir -p /run/sshd && mkdir -p ~/.ssh && \
    echo "# ssh keys" > ~/.ssh/authorized_keys && \
    echo "export PATH=$(dirname $(which conda)):$PATH" >> ~/.bashrc && \
    pip config set global.index-url https://pypi.tuna.tsinghua.edu.cn/simple && \
    pip cache purge && \
    conda clean -ya

# entrypoint
WORKDIR /workspace
COPY entrypoint.sh /opt/src/
ENTRYPOINT ["/bin/bash", "/opt/src/entrypoint.sh"]
